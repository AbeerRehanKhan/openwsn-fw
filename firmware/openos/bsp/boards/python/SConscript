import os
import distutils.sysconfig

Import('env')

localEnv = env.Clone()

target =  'libbsp'
sources_c = [
    'board.c',
    'bsp_timer.c',
    'debugpins.c',
    'eui64.c',
    'leds.c',
    'openwsnmodule.c',
    'radio.c',
    'radiotimer.c',
    'uart.c',
    'supply.c',
]
sources_h = [
    'openwsnmodule.h',
    'supply.h',
]

#============================ SCons targets ===================================

assert(localEnv['board']=='python')

for s in sources_c+sources_h:
    localEnv.Objectify(
        target = localEnv.ObjectifiedFilename(s),
        source = s,
    )

libbsp = localEnv.Library(
    target = target,
    source = [localEnv.ObjectifiedFilename(s) for s in sources_c],
)
localEnv.Depends(libbsp,[localEnv.ObjectifiedFilename(s) for s in sources_h])
Alias('libbsp', libbsp)
